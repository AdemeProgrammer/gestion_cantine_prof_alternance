{% extends 'base.html.twig' %}
{% import "_macros/breadcumb.html.twig" as _breadcumb %}

{% block title %}Description{% endblock %}
{% block titre_page %}Gestion des descriptions{% endblock %}
{% block action_page %}
    <a href="{{ path('app_description_new') }}" class="btn btn-primary">+ Créer une description</a>
{% endblock %}

{% block Breadcrumb %}
    {{ _breadcumb.etape("Description") }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# KeenIcons (locaux) si non chargés globalement #}
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/duotone/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/outline/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/solid/style.css') }}">

    {# DataTables (bundle local Saul) #}
    <link rel="stylesheet" href="{{ asset('assets/plugins/custom/datatables/datatables.bundle.css') }}">
{% endblock %}

{% block body %}
        {% if descriptions is empty %}
            <div class="card card-dashed hover-elevate-up">
                <div class="card-body text-center py-10">
                    <div class="fs-5 mb-3">Aucune description enregistrée.</div>
                    <a href="{{ path('app_description_new') }}" class="btn btn-sm btn-primary">Créer la première description</a>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="descriptionTable" class="table table-row-dashed align-middle gy-3">
                            <thead>
                            <tr class="text-muted fw-semibold">
                                <th>Professeur</th>
                                <th>Promo</th>
                                <th class="text-center w-50px">L</th>
                                <th class="text-center w-50px">Ma</th>
                                <th class="text-center w-50px">Me</th>
                                <th class="text-center w-50px">J</th>
                                <th class="text-center w-50px">V</th>
                                <th class="text-end min-w-175px">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for d in descriptions %}
                                {# professeur #}
                                {% set profTxt = '—' %}
                                {% if d.refProfesseur %}
                                    {% set p = d.refProfesseur %}
                                    {% if p.prenom is defined or p.nom is defined %}
                                        {% set profTxt = (p.prenom is defined ? p.prenom ~ ' ' : '') ~ (p.nom is defined ? p.nom : '') %}
                                    {% elseif p.email is defined %}
                                        {% set profTxt = p.email %}
                                    {% else %}
                                        {% set profTxt = 'Professeur' %}
                                    {% endif %}
                                {% endif %}

                                {# promo #}
                                {% set promoTxt = '—' %}
                                {% set promoHasYears = false %}
                                {% if d.refPromo %}
                                    {% set pr = d.refPromo %}
                                    {% if pr.anneeDebut is defined and pr.anneeDebut is not null %}
                                        {% set y1 = pr.anneeDebut %}
                                        {% set y2 = (pr.anneeFin is defined and pr.anneeFin is not null) ? pr.anneeFin : (pr.anneeDebut + 1) %}
                                        {% set promoHasYears = true %}
                                    {% elseif pr.nom is defined %}
                                        {% set promoTxt = pr.nom %}
                                    {% else %}
                                        {% set promoTxt = 'Promo' %}
                                    {% endif %}
                                {% endif %}

                                {# booléens jours #}
                                {% set L  = d.lundi    ? 1 : 0 %}
                                {% set Ma = d.mardi    ? 1 : 0 %}
                                {% set Me = d.mercredi ? 1 : 0 %}
                                {% set J  = d.jeudi    ? 1 : 0 %}
                                {% set V  = d.vendredi ? 1 : 0 %}

                                <tr>
                                    <td class="fw-semibold">{{ profTxt }}</td>

                                    <td>
                                        {% if promoHasYears %}
                                            <div class="d-flex flex-column lh-1">
                                                <span class="fw-semibold">{{ y1 }}</span>
                                                <span class="text-gray-500">{{ y2 }}</span>
                                            </div>
                                        {% else %}
                                            {{ promoTxt }}
                                        {% endif %}
                                    </td>

                                    {# Jours : badge vert si oui, tiret si non #}
                                    <td class="text-center" data-order="{{ L }}">
                                        {% if L %}
                                            <span class="badge badge-light-success p-2">
                                                <i class="ki-outline ki-check fs-4"></i>
                                            </span>
                                        {% else %}
                                            <i class="ki-outline ki-minus fs-3 text-gray-400"></i>
                                        {% endif %}
                                    </td>
                                    <td class="text-center" data-order="{{ Ma }}">
                                        {% if Ma %}
                                            <span class="badge badge-light-success p-2">
                                                <i class="ki-outline ki-check fs-4"></i>
                                            </span>
                                        {% else %}
                                            <i class="ki-outline ki-minus fs-3 text-gray-400"></i>
                                        {% endif %}
                                    </td>
                                    <td class="text-center" data-order="{{ Me }}">
                                        {% if Me %}
                                            <span class="badge badge-light-success p-2">
                                                <i class="ki-outline ki-check fs-4"></i>
                                            </span>
                                        {% else %}
                                            <i class="ki-outline ki-minus fs-3 text-gray-400"></i>
                                        {% endif %}
                                    </td>
                                    <td class="text-center" data-order="{{ J }}">
                                        {% if J %}
                                            <span class="badge badge-light-success p-2">
                                                <i class="ki-outline ki-check fs-4"></i>
                                            </span>
                                        {% else %}
                                            <i class="ki-outline ki-minus fs-3 text-gray-400"></i>
                                        {% endif %}
                                    </td>
                                    <td class="text-center" data-order="{{ V }}">
                                        {% if V %}
                                            <span class="badge badge-light-success p-2">
                                                <i class="ki-outline ki-check fs-4"></i>
                                            </span>
                                        {% else %}
                                            <i class="ki-outline ki-minus fs-3 text-gray-400"></i>
                                        {% endif %}
                                    </td>

                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-icon btn-light-secondary"
                                               href="{{ path('app_description_show', {'id': d.id}) }}"
                                               title="Voir" aria-label="Voir">
                                                <i class="ki-outline ki-eye fs-3"></i>
                                            </a>
                                            <a class="btn btn-icon btn-primary"
                                               href="{{ path('app_description_edit', {'id': d.id}) }}"
                                               title="Modifier" aria-label="Modifier">
                                                <i class="ki-outline ki-pencil fs-3"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_description_delete', {'id': d.id}) }}"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Supprimer cette description ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ d.id) }}">
                                                <button class="btn btn-icon btn-danger" title="Supprimer" aria-label="Supprimer">
                                                    <i class="ki-outline ki-trash fs-3"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# DataTables (bundle local Saul) #}
    <script src="{{ asset('assets/plugins/custom/datatables/datatables.bundle.js') }}"></script>
    <script>
        (function () {
            const fr = {
                "sEmptyTable":"Aucune donnée disponible",
                "sInfo":"Affichage _START_ à _END_ sur _TOTAL_",
                "sInfoEmpty":"Affichage 0 à 0 sur 0",
                "sInfoFiltered":"(filtré de _MAX_ au total)",
                "sLengthMenu":"Afficher _MENU_",
                "sLoadingRecords":"Chargement...",
                "sProcessing":"Traitement...",
                "sSearch":"Rechercher :",
                "sZeroRecords":"Aucun résultat trouvé",
                "oPaginate":{"sFirst":"Premier","sLast":"Dernier","sNext":"Suivant","sPrevious":"Précédent"}
            };

            document.addEventListener('DOMContentLoaded', function () {
                // jQuery est fourni par plugins.bundle.js (Saul). Si non injecté globalement, le rajouter côté layout.
                const $table = window.jQuery && window.jQuery('#descriptionTable');
                if (!$table) return;

                $table.DataTable({
                    language: fr,
                    pageLength: 100,
                    lengthChange: false,
                    order: [[0, 'asc']],
                    responsive: true,
                    autoWidth: false,
                    columnDefs: [
                        { targets: [2,3,4,5,6], className: 'text-center', type: 'num' },
                        { targets: -1, orderable: false, className: 'text-end' }
                    ]
                });
            });
        })();
    </script>
{% endblock %}

