{# templates/description/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Descriptions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# KeenIcons #}
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/duotone/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/outline/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/solid/style.css') }}">

    {# DataTables #}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">

    <style>
        :root{
            --icon-size: 22px; /* taille des icônes des boutons */
            --yes-bg: #e8f5e9;
            --yes-bd: #b7e1be;
            --yes-fg: #1e7e34;
            --no-bg:  #f1f3f5;
            --no-bd:  #e9ecef;
            --no-fg:  #6c757d;
        }

        .card-dashed { border: 2px dashed rgba(0,0,0,.08) !important; }
        .card-hover { transition: transform .15s ease, box-shadow .15s ease; }
        .card-hover:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(0,0,0,.08); }
        .table thead th { white-space: nowrap; }

        /* centrage par défaut */
        #descriptionTable th, #descriptionTable td { vertical-align: middle; text-align: center; }

        /* boutons d’actions (pleins + plus grands) */
        .btn-icon{
            width:40px;height:40px;padding:0;
            display:inline-flex;align-items:center;justify-content:center;
            border-radius:.7rem;
        }
        .btn-icon i[class^="ki-"], .btn-icon i[class*=" ki-"]{ font-size: var(--icon-size); line-height: 1; }
        .col-actions{ width: 152px; white-space: nowrap; } /* 3 x 40px + gaps */

        /* pastilles des jours */
        .day-pill{
            width:28px;height:28px;border-radius:999px;
            display:inline-flex;align-items:center;justify-content:center;
            font-weight:600;border:1px solid transparent;
        }
        .day-yes{ background:var(--yes-bg); color:var(--yes-fg); border-color:var(--yes-bd); }
        .day-no { background:var(--no-bg);  color:var(--no-fg);  border-color:var(--no-bd);  }

        .col-day{ width:56px; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 m-0">Gestion des descriptions</h1>
            <a href="{{ path('app_description_new') }}" class="btn btn-primary">+ Créer une description</a>
        </div>

        {% if descriptions is empty %}
            <div class="card card-dashed card-hover">
                <div class="card-body text-center py-5">
                    <div class="mb-2">Aucune description enregistrée.</div>
                    <a href="{{ path('app_description_new') }}" class="btn btn-sm btn-primary">Créer la première description</a>
                </div>
            </div>
        {% else %}
            <div class="card shadow-sm card-hover">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="descriptionTable" class="table table-sm table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Professeur</th>
                                <th>Promo</th>
                                <th class="col-day">L</th>
                                <th class="col-day">Ma</th>
                                <th class="col-day">Me</th>
                                <th class="col-day">J</th>
                                <th class="col-day">V</th>
                                <th>Report</th>
                                <th class="text-end col-actions">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for d in descriptions %}
                                {# professeur #}
                                {% set profTxt = '—' %}
                                {% if d.refProfesseur %}
                                    {% set p = d.refProfesseur %}
                                    {% if p.prenom is defined or p.nom is defined %}
                                        {% set profTxt = (p.prenom is defined ? p.prenom ~ ' ' : '') ~ (p.nom is defined ? p.nom : '') %}
                                    {% elseif p.email is defined %}
                                        {% set profTxt = p.email %}
                                    {% else %}
                                        {% set profTxt = 'Professeur' %}
                                    {% endif %}
                                {% endif %}

                                {# promo #}
                                {% set promoTxt = '—' %}
                                {% set promoHasYears = false %}
                                {% if d.refPromo %}
                                    {% set pr = d.refPromo %}
                                    {% if pr.anneeDebut is defined and pr.anneeDebut is not null %}
                                        {% set y1 = pr.anneeDebut %}
                                        {% set y2 = (pr.anneeFin is defined and pr.anneeFin is not null) ? pr.anneeFin : (pr.anneeDebut + 1) %}
                                        {% set promoHasYears = true %}
                                    {% elseif pr.nom is defined %}
                                        {% set promoTxt = pr.nom %}
                                    {% else %}
                                        {% set promoTxt = 'Promo' %}
                                    {% endif %}
                                {% endif %}

                                {# booléens jours #}
                                {% set L  = d.lundi    ? 1 : 0 %}
                                {% set Ma = d.mardi    ? 1 : 0 %}
                                {% set Me = d.mercredi ? 1 : 0 %}
                                {% set J  = d.jeudi    ? 1 : 0 %}
                                {% set V  = d.vendredi ? 1 : 0 %}

                                {# report #}
                                {% set reportVal = d.report ?? '' %}
                                {% set reportDisplay = reportVal is same as('') ? '—' : (reportVal|number_format(2, ',', ' ')) ~ ' €' %}

                                <tr>
                                    <td>{{ profTxt }}</td>

                                    <td>
                                        {% if promoHasYears %}
                                            <div class="lh-1">
                                                <div>{{ y1 }}</div>
                                                <div>{{ y2 }}</div>
                                            </div>
                                        {% else %}
                                            {{ promoTxt }}
                                        {% endif %}
                                    </td>

                                    <td data-order="{{ L }}">
                                        {% if L %}
                                            <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                        {% else %}
                                            <i class="ki-outline ki-minus"></i></span>
                                        {% endif %}
                                    </td>
                                    <td data-order="{{ Ma }}">
                                        {% if Ma %}
                                            <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                        {% else %}
                                            <i class="ki-outline ki-minus"></i></span>
                                        {% endif %}
                                    </td>
                                    <td data-order="{{ Me }}">
                                        {% if Me %}
                                            <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                        {% else %}
                                            <i class="ki-outline ki-minus"></i></span>
                                        {% endif %}
                                    </td>
                                    <td data-order="{{ J }}">
                                        {% if J %}
                                            <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                        {% else %}
                                            <i class="ki-outline ki-minus"></i></span>
                                        {% endif %}
                                    </td>
                                    <td data-order="{{ V }}">
                                        {% if V %}
                                            <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                        {% else %}
                                            <i class="ki-outline ki-minus"></i></span>
                                        {% endif %}
                                    </td>

                                    <td data-order="{{ reportVal is same as('') ? '' : reportVal|replace({',':'.'}) }}">
                                        {{ reportDisplay }}
                                    </td>

                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-secondary btn-icon"
                                               href="{{ path('app_description_show', {'id': d.id}) }}"
                                               title="Voir" aria-label="Voir">
                                                <i class="ki-outline ki-eye"></i>
                                            </a>
                                            <a class="btn btn-primary btn-icon"
                                               href="{{ path('app_description_edit', {'id': d.id}) }}"
                                               title="Modifier" aria-label="Modifier">
                                                <i class="ki-outline ki-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_description_delete', {'id': d.id}) }}"
                                                  style="display:inline"
                                                  onsubmit="return confirm('Supprimer cette description ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ d.id) }}">
                                                <button class="btn btn-danger btn-icon" title="Supprimer" aria-label="Supprimer">
                                                    <i class="ki-outline ki-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script>
        (function () {
            const fr = {
                "sEmptyTable":"Aucune donnée disponible",
                "sInfo":"Affichage _START_ à _END_ sur _TOTAL_",
                "sInfoEmpty":"Affichage 0 à 0 sur 0",
                "sInfoFiltered":"(filtré de _MAX_ au total)",
                "sLengthMenu":"Afficher _MENU_",
                "sLoadingRecords":"Chargement...",
                "sProcessing":"Traitement...",
                "sSearch":"Rechercher :",
                "sZeroRecords":"Aucun résultat trouvé",
                "oPaginate":{"sFirst":"Premier","sLast":"Dernier","sNext":"Suivant","sPrevious":"Précédent"}
            };
            $(function () {
                $('#descriptionTable').DataTable({
                    language: fr,
                    pageLength: 25,
                    order: [[0, 'asc']],
                    responsive: true,
                    columnDefs: [
                        { targets: [0,1,2,3,4,5,6,7,-1], className: 'text-center' }, // tout centré
                        { targets: -1, orderable: false },
                        { targets: 7, type: 'num' } // report tri numérique
                    ]
                });
            });
        })();
    </script>
{% endblock %}
