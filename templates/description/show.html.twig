{% extends 'base.html.twig' %}

{% block title %}Description{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# KeenIcons #}
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/duotone/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/outline/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/solid/style.css') }}">

    <style>
        :root{
            --icon-size: 22px;
            --yes-bg: #e8f5e9;
            --yes-bd: #b7e1be;
            --yes-fg: #1e7e34;
            --no-bg:  #f1f3f5;
            --no-bd:  #e9ecef;
            --no-fg:  #6c757d;
        }
        .card-dashed { border: 2px dashed rgba(0,0,0,.08) !important; }
        .card-hover { transition: transform .15s ease, box-shadow .15s ease; }
        .card-hover:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(0,0,0,.08); }
        .table thead th { white-space: nowrap; }
        .day-pill{
            width:28px;height:28px;border-radius:999px;
            display:inline-flex;align-items:center;justify-content:center;
            font-weight:600;border:1px solid transparent;
        }
        .day-yes{ background:var(--yes-bg); color:var(--yes-fg); border-color:var(--yes-bd); }
        .day-no { background:var(--no-bg);  color:var(--no-fg);  border-color:var(--no-bd); }
        .col-day{ width:56px; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm card-hover">
            <div class="card-body">
                <h3 class="mb-4">Description #{{ description.id }}</h3>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered align-middle">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ description.id }}</td>
                        </tr>
                        <tr>
                            <th>Lundi</th>
                            <td>
                                {% if description.lundi %}
                                    <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                {% else %}
                                    <span class="day-pill day-no"><i class="ki-outline ki-minus"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Mardi</th>
                            <td>
                                {% if description.mardi %}
                                    <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                {% else %}
                                    <span class="day-pill day-no"><i class="ki-outline ki-minus"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Mercredi</th>
                            <td>
                                {% if description.mercredi %}
                                    <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                {% else %}
                                    <span class="day-pill day-no"><i class="ki-outline ki-minus"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Jeudi</th>
                            <td>
                                {% if description.jeudi %}
                                    <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                {% else %}
                                    <span class="day-pill day-no"><i class="ki-outline ki-minus"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Vendredi</th>
                            <td>
                                {% if description.vendredi %}
                                    <span class="day-pill day-yes"><i class="ki-outline ki-check"></i></span>
                                {% else %}
                                    <span class="day-pill day-no"><i class="ki-outline ki-minus"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Report</th>
                            <td>{{ description.report ?? '—' }} €</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path('app_description_index') }}" class="btn btn-secondary btn-icon" title="Retour">
                        <i class="ki-outline ki-arrow-left"></i>
                    </a>
                    <a href="{{ path('app_description_edit', {'id': description.id}) }}" class="btn btn-primary btn-icon" title="Modifier">
                        <i class="ki-outline ki-pencil"></i>
                    </a>
                    {{ include('description/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

