{% extends 'base.html.twig' %}
{% import "_macros/breadcumb.html.twig" as _breadcumb %}

{% block title %}Calendrier — {{ promo.anneeDebut }}-{{ promo.anneeFin }}{% endblock %}
{% block titre_page %}{{ promo.anneeDebut }}-{{ promo.anneeFin }}{% endblock %}
{% block action_page %}
    <a href="{{ path('app_description_new',{ 'id':promo.id}) }}" class="btn btn-primary">Lier un nouveau professeur</a>

{% endblock %}
{% block Breadcrumb %}
    {{ _breadcumb.etape("Promotion") }}
    {{ _breadcumb.etape("Année") }}
{% endblock %}
{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="h4 m-0">Sélection du mois</h1>
            <div class="text-muted">Promo {{ promo.anneeDebut }} — {{ promo.anneeFin }}</div>
        </div>

        <div class="row g-3">
            {% for c in cards %}
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a class="text-decoration-none" href="{{ path('cal_month', { id: promo.id, y: c.year, m: c.month }) }}">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-primary-subtle text-primary fw-semibold">{{ c.labelShort }}</span>
                                    <span class="small text-muted">{{ c.year }}</span>
                                </div>
                                <div class="fw-semibold">{{ c.labelLong }}</div>
                                <div class="text-muted small mt-2">{{ c.daysCount }} jour{{ c.daysCount > 1 ? 's' : '' }}</div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_promo_index') }}" class="btn btn-link p-0">← Retour promotions</a>
        </div>
    </div>
{% endblock %}
