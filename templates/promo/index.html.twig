{# templates/promo/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Promotions{% endblock %}

{% block stylesheets %}
    <style>
        .card-dashed { border: 2px dashed rgba(0,0,0,.1) !important; }
        .card-hover:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(0,0,0,.08); }
        .card-hover { transition: transform .15s ease, box-shadow .15s ease; }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="h4 m-0">Dashboard</h1>
            <div class="text-muted">Liste des promotions</div>
        </div>

        <div class="row g-3">
            {% for promo in promos %}
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a class="text-decoration-none" href="{{ path('cal_summary', { id: promo.id }) }}">
                        <div class="card h-100 shadow-sm border-0 card-hover">
                            <div class="card-body d-flex flex-column justify-content-center text-center">
                                <div class="fw-semibold fs-5">{{ promo.anneeDebut }} — {{ promo.anneeFin }}</div>
                                <div class="text-muted small mt-1">Promotion</div>
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="text-muted">Aucune promotion pour le moment.</div>
                </div>
            {% endfor %}

            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <a class="text-decoration-none" href="{{ path('app_promo_new') }}">
                    <div class="card h-100 shadow-sm card-dashed card-hover">
                        <div class="card-body d-flex flex-column justify-content-center text-center text-muted">
                            + Créer une promotion
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
