{# templates/promo/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'card shadow-sm p-4 mb-4'}}) }}
<h2 class="mb-3">Créer une Promotion (on dit bonjour)</h2>

<div class="mb-3">
    {{ form_label(form.annee_debut, 'Année de début', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.annee_debut, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.annee_debut) }}
</div>

<div class="mb-3">
    {{ form_label(form.annee_fin, 'Année de fin', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.annee_fin, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.annee_fin) }}
</div>

<button class="btn btn-success">
    {{ button_label|default('Enregistrer') }}
</button>
{{ form_end(form) }}
