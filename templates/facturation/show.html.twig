{% extends 'base.html.twig' %}
{% import "_macros/breadcumb.html.twig" as _breadcumb %}

{% block title %}Détails de la facturation{% endblock %}
{% block titre_page %}Détails de la facturation{% endblock %}
{% block action_page %}
    <a href="{{ path('app_facturation_edit', {'id': facturation.id}) }}" class="btn btn-primary">Modifier</a>
{% endblock %}

{% block Breadcrumb %}
    {{ _breadcumb.etape("Facturation") }}
    {{ _breadcumb.etape("Détails") }}
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facturation.id }}</td>
            </tr>
            <tr>
                <th>Mois</th>
                <td>{{ facturation.mois }}</td>
            </tr>
            <tr>
                <th>Montant_total</th>
                <td>{{ facturation.montantTotal }}</td>
            </tr>
            <tr>
                <th>Montant_regle</th>
                <td>{{ facturation.montantRegle }}</td>
            </tr>
            <tr>
                <th>Montant_restant</th>
                <td>{{ facturation.montantRestant }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ facturation.statut ? facturation.statut.value : '' }}</td>
            </tr>
            <tr>
                <th>Nb_repas</th>
                <td>{{ facturation.nbRepas }}</td>
            </tr>
            <tr>
                <th>Report_m_1</th>
                <td>{{ facturation.reportM1 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_facturation_index') }}">Revenir à la liste</a>

    {{ include('facturation/_delete_form.html.twig') }}
{% endblock %}
