{% extends 'base.html.twig' %}
{% import "_macros/breadcumb.html.twig" as _breadcumb %}

{% block title %}Facturation{% endblock %}
{% block titre_page %}Liste des facturations{% endblock %}
{% block action_page %}
    <a href="{{ path('app_facturation_new') }}" class="btn btn-primary">Créer une facturation</a>
{% endblock %}

{% block Breadcrumb %}
    {{ _breadcumb.etape("Description") }}
    {{ _breadcumb.etape("Accueil") }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# KeenIcons (locaux) si non chargés globalement #}
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/duotone/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/outline/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/keenicons/solid/style.css') }}">
    {# DataTables (bundle local Saul) #}
    <link rel="stylesheet" href="{{ asset('assets/plugins/custom/datatables/datatables.bundle.css') }}">
{% endblock %}

{% block body %}
    <div class="container-xxl py-8">


        {# Tolère 'facturations' ou 'factures' côté contrôleur #}
        {% set rows = facturations is defined ? facturations : (factures is defined ? factures : []) %}

        {% if rows is empty %}
            <div class="card card-dashed">
                <div class="card-body text-center py-10">
                    <div class="fs-5 mb-3">Aucune facture enregistrée.</div>
                </div>
            </div>
        {% else %}
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="facturationTable" class="table table-row-dashed align-middle gy-3">
                            <thead>
                            <tr class="text-muted fw-semibold">
                                <th>Référence</th>
                                <th>Professeur</th>
                                <th>Période</th>
                                <th class="text-center">Repas</th>
                                <th>Montant</th>
                                <th class="text-center">Statut</th>
                                <th>Émise le</th>
                                <th class="text-end min-w-200px">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for f in rows %}
                                {# Référence #}
                                {% set ref = f.reference is defined and f.reference ? f.reference : ('#' ~ f.id) %}

                                {# Professeur #}
                                {% set profTxt = '—' %}
                                {% if f.refProfesseur is defined and f.refProfesseur %}
                                    {% set p = f.refProfesseur %}
                                    {% if p.prenom is defined or p.nom is defined %}
                                        {% set profTxt = (p.prenom is defined ? p.prenom ~ ' ' : '') ~ (p.nom is defined ? p.nom : '') %}
                                    {% elseif p.email is defined %}
                                        {% set profTxt = p.email %}
                                    {% endif %}
                                {% endif %}

                                {# Période + clé de tri #}
                                {% set periodeTxt = '—' %}
                                {% set periodeOrder = '' %}
                                {% if f.periode is defined and f.periode %}
                                    {% set periodeTxt = f.periode|date('m/Y') %}
                                    {% set periodeOrder = f.periode|date('Y-m') %}
                                {% elseif f.mois is defined or f.annee is defined %}
                                    {% set mois = f.mois is defined and f.mois ? '%02d'|format(f.mois) : '01' %}
                                    {% set annee = f.annee is defined and f.annee ? f.annee : '1900' %}
                                    {% set periodeTxt = mois ~ '/' ~ annee %}
                                    {% set periodeOrder = annee ~ '-' ~ mois %}
                                {% endif %}

                                {# Repas #}
                                {% set nbRepas = f.nbRepas is defined ? f.nbRepas : (f.repasCount is defined ? f.repasCount : null) %}
                                {% set repasOrder = nbRepas is not null ? nbRepas : -1 %}

                                {# Montant #}
                                {% set amount = f.montant is defined ? f.montant : (f.total is defined ? f.total : (f.totalDu is defined ? f.totalDu : null)) %}
                                {% set amountDisplay = amount is null ? '—' : amount|number_format(2, ',', ' ') ~ ' €' %}
                                {% set amountOrder = amount is null ? '' : amount %}

                                {# Statut (mapping couleur + tri) #}
                                {% set rawStatus = f.statut is defined ? f.statut : (f.status is defined ? f.status : null) %}
                                {% set s = rawStatus is null ? '' : rawStatus|lower %}
                                {% set label = '—' %}
                                {% set badge = 'badge-light' %}
                                {% set orderStatus = -1 %}
                                {% if 'pay' in s %}
                                    {% set label = 'Payée' %}
                                    {% set badge = 'badge-light-success' %}
                                    {% set orderStatus = 2 %}
                                {% elseif 'part' in s %}
                                    {% set label = 'Partielle' %}
                                    {% set badge = 'badge-light-warning' %}
                                    {% set orderStatus = 1 %}
                                {% elseif 'att' in s or 'en' in s %}
                                    {% set label = 'En attente' %}
                                    {% set badge = 'badge-light' %}
                                    {% set orderStatus = 0 %}
                                {% endif %}

                                {# Date d’émission #}
                                {% set emittedAt = f.createdAt is defined and f.createdAt ? f.createdAt : (f.dateEmission is defined ? f.dateEmission : null) %}
                                {% set emittedTxt = emittedAt ? emittedAt|date('d/m/Y') : '—' %}
                                {% set emittedOrder = emittedAt ? emittedAt|date('Y-m-d') : '' %}

                                <tr>
                                    <td class="fw-semibold">{{ ref }}</td>
                                    <td class="fw-semibold">{{ profTxt }}</td>
                                    <td data-order="{{ periodeOrder }}">{{ periodeTxt }}</td>
                                    <td class="text-center" data-order="{{ repasOrder }}">
                                        {{ nbRepas is not null ? nbRepas : '—' }}
                                    </td>
                                    <td data-order="{{ amountOrder }}">{{ amountDisplay }}</td>
                                    <td class="text-center" data-order="{{ orderStatus }}">
                                        <span class="badge {{ badge }} px-3 py-2">{{ label }}</span>
                                    </td>
                                    <td data-order="{{ emittedOrder }}">{{ emittedTxt }}</td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-icon btn-light-secondary"
                                               href="{{ path('app_facturation_show', {'id': f.id}) }}"
                                               title="Afficher" aria-label="Afficher">
                                                <i class="ki-outline ki-eye fs-3"></i>
                                            </a>
                                            <a class="btn btn-icon btn-primary"
                                               href="{{ path('app_facturation_edit', {'id': f.id}) }}"
                                               title="Modifier" aria-label="Modifier">
                                                <i class="ki-outline ki-pencil fs-3"></i>
                                            </a>
                                            {# Optionnel : suppression inline
                      <form method="post" action="{{ path('app_facturation_delete', {'id': f.id}) }}"
                            class="d-inline" onsubmit="return confirm('Supprimer cette facture ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ f.id) }}">
                        <button class="btn btn-icon btn-danger" title="Supprimer" aria-label="Supprimer">
                          <i class="ki-outline ki-trash fs-3"></i>
                        </button>
                      </form>
                                            #}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# DataTables (bundle local Saul) #}
    <script src="{{ asset('assets/plugins/custom/datatables/datatables.bundle.js') }}"></script>
    <script>
        (function () {
            const fr = {
                "sEmptyTable":"Aucune donnée disponible",
                "sInfo":"Affichage _START_ à _END_ sur _TOTAL_",
                "sInfoEmpty":"Affichage 0 à 0 sur 0",
                "sInfoFiltered":"(filtré de _MAX_ au total)",
                "sLengthMenu":"Afficher _MENU_",
                "sLoadingRecords":"Chargement...",
                "sProcessing":"Traitement...",
                "sSearch":"Rechercher :",
                "sZeroRecords":"Aucun résultat trouvé",
                "oPaginate":{"sFirst":"Premier","sLast":"Dernier","sNext":"Suivant","sPrevious":"Précédent"}
            };

            document.addEventListener('DOMContentLoaded', function () {
                const $ = window.jQuery; // dispo via plugins.bundle.js de Saul (chargé dans base.html.twig)
                if (!$) return;

                $('#facturationTable').DataTable({
                    language: fr,
                    pageLength: 25,
                    order: [[6, 'desc']], // tri par "Émise le" (desc)
                    responsive: true,
                    autoWidth: false,
                    columnDefs: [
                        { targets: 3, className: 'text-center' }, // Repas
                        { targets: 5, className: 'text-center' }, // Statut
                        { targets: -1, orderable: false, className: 'text-end' } // Actions
                    ]
                });
            });
        })();
    </script>
{% endblock %}

