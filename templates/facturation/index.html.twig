{# templates/facturation/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des facturations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des facturations</h1>

        <a href="{{ path('app_facturation_new') }}" class="btn btn-success mb-3">+ Nouvelle facturation</a>

        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Mois</th>
                <th>Professeur</th>
                <th>Nb repas</th>
                <th>Total (€)</th>
                <th>Réglé (€)</th>
                <th>Restant (€)</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for facturation in facturations %}
                <tr>
                    <td>{{ facturation.id }}</td>
                    <td>{{ facturation.mois }}</td>
                    <td>{{ facturation.refProfesseur ? facturation.refProfesseur.nom : '' }}</td>
                    <td>{{ facturation.nbRepas }}</td>
                    <td>{{ facturation.montantTotal }}</td>
                    <td>{{ facturation.montantRegle }}</td>
                    <td>{{ facturation.montantRestant }}</td>
                    <td>{{ facturation.statut ? facturation.statut.value : '' }}</td>
                    <td>
                        <a href="{{ path('app_facturation_show', {'id': facturation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_facturation_edit', {'id': facturation.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {{ include('facturation/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">Aucune facturation enregistrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

